<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.shoppinglist.view.ShoppingListDetailFragment">


    <TextView
        android:id="@+id/tittleList"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/card_background"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/descriptionList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="noe" />

    <TextView
        android:id="@+id/descriptionList"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/card_background"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tittleList"
        tools:text="Description of the list" />

    <EditText
        android:id="@+id/addItemText"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:hint="@string/hint_add_new_item"
        app:layout_constraintEnd_toStartOf="@id/addItemButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionList" />

    <ImageButton
        android:id="@+id/addItemButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/add_button"
        android:src="@drawable/baseline_add"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/addItemText"
        app:layout_constraintTop_toBottomOf="@id/descriptionList" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addItemText" />


</androidx.constraintlayout.widget.ConstraintLayout>

